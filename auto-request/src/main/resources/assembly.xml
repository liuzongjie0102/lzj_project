<assembly>
    <id>all</id>
    <formats>
        <!-- zip,tar,tar.gz,tar.bz2,jar,dir,war -->
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>

    <!-- 依赖包的输出路径 -->
    <dependencySets>
        <dependencySet>
            <outputDirectory>/lib</outputDirectory>
        </dependencySet>
    </dependencySets>

    <!-- 需要打包的文件 -->
    <fileSets>
        <!-- bin -->
        <fileSet>
            <directory>bin</directory>
            <outputDirectory>bin</outputDirectory>
            <filtered>true</filtered>
            <includes>
                <include>*.sh</include>
                <include>*.j2</include>
            </includes>
            <fileMode>0744</fileMode>
            <lineEnding>unix</lineEnding>
        </fileSet>

        <!-- jar -->
        <fileSet>
            <directory>${project.build.directory}</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>

        <!-- config -->
        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>*.properties</include>
                <include>*.j2</include>
                <include>*.config</include>
                <include>logback-spring.xml</include>
            </includes>
        </fileSet>

        <!-- logback -->
        <fileSet>
            <directory>src/main/resources/logback</directory>
            <outputDirectory>logback</outputDirectory>
            <includes>
                <include>*.xml</include>
            </includes>
        </fileSet>
        
         <!-- resources -->
        <fileSet>
            <directory>src/main/resources/resources</directory>
            <outputDirectory>resources</outputDirectory>
            <includes>
                <include>config/**/*.xml</include>
                <include>config/**/*.properties</include>
                <include>config/**/*.j2</include>
                <include>property/**/*.properties</include>
                <include>property/**/*.j2</include>
                <include>spring/**/*.properties</include>
                <include>spring/**/*.xml</include>
                <include>*.xml</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>